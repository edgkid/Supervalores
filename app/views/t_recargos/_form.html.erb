<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5><%= yield(:texto_boton) %></h5>
        </div>
        <div class="ibox-content">
          <%= form_for @t_recargo do |f| %>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label :descripcion, 'DescripciÃ³n', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= f.text_field :descripcion, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label :tasa, 'Tasa', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= f.number_field :tasa, step: 0.1, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label :estatus, class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= f.number_field :estatus, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label :t_factura_id, 'Factura', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <% facturas_array = TFactura.all.map { |factura| ["#{factura.tipo} | #{factura.justificacion}", factura.id] } %>
                    <%= f.select :t_factura_id, options_for_select(facturas_array), class: "form-control m-b" %>
                  </div>
                </div>
              </div>
            </div>
            <%= render 'shared/form_buttons', f: f %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
