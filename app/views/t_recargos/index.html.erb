<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Recargos</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Recargo', new_t_recargo_path, data: { turbolinks: false }, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTable" >
              <thead>
                <tr>
                  <th>Descripción</th>
                  <th>Tasa</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @t_recargos.each do |t_recargo| %>
                  <tr>
                    <td><%= t_recargo.descripcion %></td>
                    <td><%= t_recargo.tasa %></td>
                    <td><%= t_recargo.estatus %></td>
                    <td>
                      <%= render 'shared/action_buttons',
                                  show_route: t_recargo,
                                  edit_route: edit_t_recargo_path(t_recargo) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.dataTable').DataTable({
      pageLength: 25,
      responsive: true
    });
  });
</script>
