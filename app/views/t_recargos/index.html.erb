<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Recargos</h5>
            </div>
            <div class="col-4">
              <%= link_to 'Añadir recargo', new_t_recargo_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @registros != nil && @registros.count > 0 %>
          <div class="table-responsive">
            <div class="col-12">
              <p class="text-info">Puedes hacer "click" en cualquier fila para ver el detalle del registro.</p>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= t_recargos_path(format: :json) %>" id="daty">
              <thead>
                <tr>
                  <th>Descripción</th>
                  <th>Tasa</th>
                  <th>Periodo</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
                <%# @registros.each do |registro| %>
                <!-- <tr data-link="<%#= polymorphic_url(registro) %>">
                  <td><%#= registro.descripcion %></td>
                  <td><%#= registro.tasa %></td>
                  <td><%#= registro.t_periodo != nil ? registro.t_periodo.descripcion : "Sin determinar" %></td>
                  <td><%#= estatus_text registro.estatus %></td>
                </tr> -->
                <%# end %>
              </tbody>
            </table>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>