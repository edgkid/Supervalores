<div class="ibox-content">
  <%= form_with(model: registro, local: true) do |form| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :codigo, 'Código', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.text_field :codigo, autofocus: true, autocomplete: "codigo", class: "form-control" %>
      <% else %>
      <%= registro.codigo %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_tipo_cliente_tipo_id, 'Tipo', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">      
      <% if editable %>
      <%= form.select :t_tipo_cliente_tipo_id, opciones_de_tipos_para_tipos_de_clientes , {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_tipo_cliente_tipo.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :descripcion, 'Descripción', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.text_area :descripcion, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :estatus, 'Estatus', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= estatus_text registro.estatus %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_tarifa_id, 'Tarifa', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :t_tarifa_id, opciones_de_tarifas, {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_tarifa.nombre %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
      <% if editable %>
      <%= render "shared/action_buttons",
        list_route: return_to, list_text: "Tipos de Clientes",
        back_route: polymorphic_path(registro), back_text: "Cancelar",
        save_form: true, save_text: "Guardar",
        button_size: "xs"
      %>
      <% else %>
      <%= render "shared/action_buttons",
        list_route: return_to, list_text: "Tipos de Clientes",
        edit_route: edit_polymorphic_path(registro), edit_text: "Editar",
        delete_route: polymorphic_path(registro), delete_text: "Borrar",
        button_size: "xs"
      %>
      <% end %>
  </div>
  <% end %>
</div>