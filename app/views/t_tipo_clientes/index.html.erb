<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Tipos de Clientes</h5>
            </div>
            <div class="col-4">
              <%= link_to 'Añadir tipo de cliente', new_t_tipo_cliente_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @registros != nil && @registros.count > 0 %>
          <div class="table-responsive">
            <div class="col-12">
              <p class="text-info">Puedes hacer "click" en cualquier fila para ver el detalle del registro.</p>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Descripción</th>
                  <th>Tipo</th>
                  <th>Estatus</th>
                  <th>Tarifa</th>
                </tr>
              </thead>

              <tbody>
                <% @registros.each do |registro| %>
                <tr data-link="<%= polymorphic_url(registro) %>">
                  <td><%= registro.codigo %></td>
                  <td><%= registro.descripcion %></td>
                  <td><%= registro.t_tipo_cliente_tipo.descripcion %></td>
                  <td><%= estatus_text registro.estatus %></td>
                  <td><%= registro.t_tarifa.nombre %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>