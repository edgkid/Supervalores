<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h1>Tipos de Clientes</h1>
            </div>
            <div class="col-4">
              <%= link_to 'Añadir tipo de cliente', new_t_tipo_cliente_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Descripción</th>
                  <th>Tipo</th>
                  <th>Estatus</th>
                  <th>Tarifa</th>
                </tr>
              </thead>

              <tbody>
                <% if @registros != nil && @registros.count > 0 %>
                  <% @registros.each do |registro| %>
                  <tr data-link="<%= polymorphic_url(registro) %>">
                    <td><%= registro.codigo %></td>
                    <td><%= registro.descripcion %></td>
                    <td><%= registro.tipo %></td>
                    <td><%= estatus_text registro.estatus %></td>
                    <td><%= registro.t_tarifa.nombre %></td>
                  </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="6">No se encontraron registros.</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


