<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h1>Tipos de Clientes</h1>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir tipo de cliente', new_t_tipo_cliente_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover registros">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Descripción</th>
                  <th>Tipo</th>
                  <th>Estatus</th>
                  <th>Tarifa</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% if @registros != nil && @registros.count > 0 %>
                  <% @registros.each do |registro| %>
                  <tr>
                    <td><%= registro.codigo %></td>
                    <td style="width: 100%;"><%= registro.descripcion %></td>
                    <td><%= registro.tipo %></td>
                    <td><%= estatus_text registro.estatus %></td>
                    <td><%= registro.t_tarifa.nombre %></td>
                    <td><%= link_to 'Ver', registro, class: "btn btn-white" %></td>                    
                    <td><%= link_to 'Editar', edit_polymorphic_path(registro), class: "btn btn-white" %></td>
                    <td><%= link_to 'Eliminar', registro, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-white" %></td>
                  </tr>
                  <% end %>
                <% else %>
                  <tr>
                      <td colspan="6">No se encontraron registros.</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-Level Scripts -->
<script>
  $(document).ready(function () {
    $('.registros').DataTable({
      pageLength: 25,
      responsive: true
    });
  
  });
</script>