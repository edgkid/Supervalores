<%= fields_for registro do |form| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :anio, 'Año', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
        <%= form.text_field :anio, autofocus: true, class: "form-control" %>
      <% else %>
        <%= registro.anio %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :descripcion, 'Descripción', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
        <%= form.text_area :descripcion, class: "form-control" %>
      <% else %>
        <%= registro.descripcion %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :estatus, class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
        <%= form.select :estatus, opciones_de_estatus(false), {}, { class: 'form-control m-b' } %>
      <% else %>
        <%= registro.estatus %>
      <% end %>
    </div>
  </div>
<% end %>
