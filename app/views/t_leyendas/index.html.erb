<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Leyendas de Factura</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Leyenda', new_t_leyenda_path, data: { turbolinks: false }, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables" >
              <thead>
                <tr>
                  <th>Año</th>
                  <th>Descripción</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @t_leyendas.each do |t_leyenda| %>
                  <tr>
                    <td><%= t_leyenda.anio %></td>
                    <td><%= t_leyenda.descripcion %></td>
                    <td><%= t_leyenda.estatus %></td>
                    <td>
                      <%= render 'shared/action_buttons',
                                  show_route: t_leyenda,
                                  edit_route: edit_t_leyenda_path(t_leyenda) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/dataTable" %>
