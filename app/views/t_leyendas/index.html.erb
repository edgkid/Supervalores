<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Leyendas de Factura</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Leyenda', new_t_leyenda_path, data: { turbolinks: false }, class: 'btn btn-primary float-right' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if TLeyenda.count > 0 %>
            <div class="table-responsive">
              <div class="col-12">
                <p class="text-info">Puedes hacer clic en cualquier fila para ver el detalle del registro.</p>
              </div>
              <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= t_leyendas_path(format: :json) %>" id="ajax-datatable">
                <thead>
                  <tr>
                    <th>Año</th>
                    <th>Descripción</th>
                    <th>Estatus</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          <% else %>
            <div>
              <p>No se encontraron registros.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
