<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5><%= yield(:texto_boton) %></h5>
        </div>
        <div class="ibox-content">
          <%= form_for @t_leyenda do |f| %>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label :anio, 'Año', class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= f.number_field :anio, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label "Descripción", class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= f.text_field :descripcion, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row justify-content-sm-center">
              <div class="col-sm-6">
                <div class="form-group row">
                  <%= f.label "Estatus", class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= f.number_field :estatus, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>
            <%= render 'shared/form_buttons', f: f %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
