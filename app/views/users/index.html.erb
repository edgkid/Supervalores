<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Usuarios del Sistema</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Usuario',new_user_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th>Colaborador</th>
                  <th>Usuario</th>
                  <th>Último Login</th>
                  <th>Estatus</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.nombre %> &nbsp; <%= user.apellido %></td>
                    <td><%= user.email %></td>
                    <td>
                      <center><%= user.last_sign_in_at.strftime("%F %H:%M") %></center>
                    </td>
                    <td><%= user.estado ? 'Activo' : 'Inactivo'%></td>
                    <td><%= link_to 'Ver', user, class: "btn btn-white" %></td>
                    <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-white" %></td>
                    <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-white" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Mainly scripts -->
    <script src="/js/plugins/dataTables/datatables.min.js"></script>
    <script src="/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/js/inspinia.js"></script>
    <script src="/js/plugins/pace/pace.min.js"></script>
<!-- Page-Level Scripts -->
    <script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true
            });

        });

    </script>
