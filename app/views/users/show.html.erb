<div class="row">
	<div class="col-lg-12">
		<div class="ibox-title">
			<h5>Datos del Usuario</h5>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="ibox-title">
		    <img src="/img/a4.jpg" alt="Smiley face" height="15%" width="15%">
		</div>
		<div class="ibox-content">
			<%= form_for @user do |f| %>
				<div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @user.nombre,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group row"><label class="col-sm-2 col-form-label">Apellido</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'apellido', @user.apellido,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Estado</label>
			        <div class="col-sm-10">
			        	<%= text_field_tag 'estado', @user.estado ? 'Activo' : 'Inactivo',  class:"form-control", disabled: true %> 
			        </div>
			    </div>
			    <div class="hr-line-dashed"></div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Email</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'email', @user.email,  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Creado</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'email', @user.created_at.strftime("%F %H:%M"),  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Ultima Sesion</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'email', @user.last_sign_in_at.strftime("%F %H:%M"),  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Ultima IP</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'email', @user.last_sign_in_ip,  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
				    <div class="col-sm-4 col-sm-offset-2">
				    	<%= link_to "Editar", edit_user_path(@user), {:class=>"btn btn-white btn-sm col-12" }  %>
				    </div>
				    <div class="col-sm-4 col-sm-offset-2">
				    	<%= link_to 'Volver',users_path, {:class =>"btn btn-primary btn-sm col-12"} %>
				    </div>
			    </div>
			<% end %>
		</div>
	</div>
</div>

<%= @user.inspect %>
<%= @user.t_rols.inspect %>
