<div class="row">
	<div class="col-lg-12">
		<div class="ibox-title">
		    <h5>Editar Datos del Usuario</h5>
		</div>
		<div class="ibox-content">
			<%= form_for(:user, :url => {:action => 'update', :id => @user.id}) do |f| %>
				<div class="field">
					<%= f.label :nombre %><br />
					<%= f.text_field :nombre, autofocus: true, autocomplete: "nombre" %>
				</div>

				<div class="field">
					<%= f.label :apellido %><br />
					<%= f.text_field :apellido, autofocus: true, autocomplete: "apellido" %>
				</div>

				<div class="field">
					<%= f.label :estado %><br />
					<%= f.text_field :estado, autofocus: true %>
				</div>

				<div class="field">
					<%= f.label :email %><br />
					<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				</div>
        <div class="form-group row">
          <div class="col-sm-4 col-sm-offset-2">
            <%= link_to 'Volver',users_path, {:class =>"btn btn-primary btn-sm col-12"} %>
          </div>
        </div>
			<% end %>

		</div>
	</div>
</div>
