<div class="row">
  <div class="col-lg-12">
    <div class="ibox-title">
            <h5>Edici√≤n de Datos del Usuario</h5>
        </div>
    <div class="ibox-content">
      <%= form_with(model: user, local: true) do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
          <div class="col-sm-10">
            <%= text_field_tag 'nombre', :nombre,  class:"form-control" %> 
          </div>
        </div>

        <div class="form-group  row"><label class="col-sm-2 col-form-label">Apellido</label>
          <div class="col-sm-10">
            <%= text_field_tag 'apellido', :apellido,  class:"form-control" %> 
          </div>
        </div>

        <div class="form-group  row"><label class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <%= text_field_tag 'email', :email,  class:"form-control" %> 
          </div>
        </div>

        <div class="form-group  row"><label class="col-sm-2 col-form-label">Estado</label>
          <div class="col-sm-10">
            <%= form.check_box :estado %> 
          </div>
        </div>

        <div class="actions">
          <div class="row">
            <div class="col-4">
              <div class="row">
                <div class="col-4">
                  <%= form.submit 'Aceptar', :class => "btn btn-primary" %>
                </div>
                <div class="col-4">
                  <%= link_to 'Ver', @user, class: "btn btn-white" %>
                </div>
                <div class="col-4">
                  <%= link_to 'Volver', users_path, class: "btn btn-white" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
