<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-6">
              <h5>Caja</h5>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if TRecibo.count > 0 %>
            <div class="table-responsive">
              <div class="row">
                <div class="col-6">
                  <p class="text-info">Puedes hacer clic en cualquier fila para ver el detalle del registro.</p>
                </div>
                <div class="col-6">
                  <%= render 'date_range' %>
                </div>
              </div>
              <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= t_caja_index_path(format: :json) %>" id="ajax-datatable">
                <thead>
                  <tr>
                    <th>Nro. de Recibo</th>
                    <th>Cliente</th>
                    <th>Resoluci√≥n</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Pagado</th>
                    <th>Usuario</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          <% else %>
            <div>
              <p>No se encontraron registros.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      autoclose: true,
      format: "dd/mm/yyyy"
    });
  });
</script>