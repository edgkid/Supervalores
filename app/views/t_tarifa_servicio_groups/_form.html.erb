<div class="ibox-content">
  <%= form_with(model: registro, local: true) do |form| %>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= form.label :nombre, 'Nombre', class: "text-right" %>
    </div>
    <div class="col-sm-9 input-value">
      <% if editable %>
      <%= form.text_area :nombre, autofocus: true, autocomplete: "nombre", class: "form-control" %>
      <% else %>
      <%= registro.nombre %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= form.label :estatus, 'Estatus', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= estatus_text registro.estatus %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= form.label :t_presupuesto_id, 'Presupuesto', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :t_presupuesto_id, opciones_de_presupuestos(), {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_presupuesto.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
      <% if editable %>
      <%= render "shared/action_buttons",
        list_route: return_to, list_text: "Grupos de Servicios",
        back_route: polymorphic_path(registro), back_text: "Cancelar",
        save_form: true, save_text: "Guardar",
        button_size: "xs"
      %>
      <% else %>
      <%= render "shared/action_buttons",
        list_route: return_to, list_text: "Grupos de Servicios",
        edit_route: edit_polymorphic_path(registro), edit_text: "Editar",
        delete_route: polymorphic_path(registro), delete_text: "Borrar",
        button_size: "xs"
      %>
      <% end %>
  </div>
  <% end %>
</div>