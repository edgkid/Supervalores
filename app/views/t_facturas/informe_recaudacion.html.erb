<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row" id="period-form-container">
    <div class="col-md-2">
      <select id="periodo-select" name="periodo" style="width: 100%;">
        <option value=""></option>
        <option value="sin_filtro">Sin Filtro</option>
        <option value="diario">Diario</option>
        <option value="semanal">Semanal</option>
        <option value="mensual">Mensual</option>
        <option value="bimestral">Bimestral</option>
        <option value="trimestral">Trimestral</option>
        <option value="semestral">Semestral</option>
        <option value="anual">Anual</option>
      </select> 
    </div>
    <div class="col-md-10">
      <div class="row">
        <div align="center" class="col" id="period-selects-container">
          <%= render 'period_selects', periodo: nil %>
        </div>
        <div class="col">
          <button class="btn btn-primary" id="execute">Ejecutar</button>
          <button class="btn btn-default" type="button" onclick="javascript:window.print()">Imprimir</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= image_tag "logoSMV.png", width: '150px' %>
    </div>
    <div align="right" class="col-md-6">
      <h5><b>Fecha de impresión:</b> <%= Date.today.strftime('%d/%m/%Y') %></h5>
    </div>
  </div>
  <div class="row" style="margin-top: -40px;">
    <div align="center" class="col-12">
      <h3>REPÚBLICA DE PANAMÁ</h3>
      <h3>SUPERINTENDENCIA DEL MERCADO DE VALORES</h3>
      <h3>DEPARTAMENTO DE TESORERÍA</h3>
      <hr>
      <h3>
        INFORME DE RECAUDACIÓN<br>
        Correspondiente al <%= Date.today.strftime('%Y') %>
      </h3>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if TFactura.count > 0 %>
        <div class="table-responsive">
          <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6">
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= informe_recaudacion_t_facturas_path(format: :json) %>" id="ajax-datatable">
            <thead>
              <tr>
                <th>#Factura</th>
                <th>#Recibo</th>
                <th>Cliente</th>
                <th>Res</th>
                <th>Cédula</th>
                <th>Fecha</th>
                <th>M. Pago</th>
                <th>Estado</th>
                <th>Importe</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      <% else %>
        <div>
          <p>No se encontraron registros.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

