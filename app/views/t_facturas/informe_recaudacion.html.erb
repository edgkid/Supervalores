      }
      $('#day').datepicker({
        autoclose: true,
        format: "dd/mm/yyyy",
        todayBtn: "linked"
      });
      $('.input-daterange').datepicker({
        keyboardNavigation: false,
        format: "dd/mm/yyyy",
        forceParse: false,
        startDate: 0,
        calendarWeeks: true
      });
      $('.month-view').datepicker({
        minViewMode: 1,
        maxViewMode: 2,
        format: "dd/mm/yyyy",
        startDate: 0
      });
      $('#year').datepicker({
        minViewMode: 2,
        format: "dd/mm/yyyy",
        autoclose: true
      });
    });

    $.extend({
      useDataInAjaxCall: function (d) {
        d.day = $('#day').val();
        d.start = $('#start').val();
        d.end = $('#end').val();
        d.month_year = $('#month-year').val();
        d.bimonthly = $('#bimonthly').val();
        d.quarterly = $('#quarterly').val();
        d.biannual = $('#biannual').val();
        d.year = $('#year').val();
      },
      // useDataTableFooter: function (footer) {
      //   $.ajax({
      //     url: '<%= total_pagadas_t_facturas_path %>',
      //     contentType: "application/json",
      //     type: 'get',
      //     data: {
      //       from: $('#from').val(),
      //       to: $('#to').val()
      //     }
      //   })
      //   .done(function (data) {
      //     if (data.procesado) {
      //       footer.empty().append($("<tr />")
      //         .append($("<td />"))
      //         .append($("<td />"))
      //         .append($("<td />"))
      //         .append($("<td />"))
      //         .append($("<td />").html("Total"))
      //         .append($("<td />").html(data.total))
      //         .append($("<td />"))
      //       )
      //     }
      //   });
      // }
    });

    function refreshTable () {
      $("#ajax-datatable").DataTable().ajax.reload();
    }

    $('.datepicker').on('changeDate', function (e) {
      refreshTable();
    });

    $('#execute').click(function () {
      refreshTable();
    });
  });
</script>

<style type="text/css" media="print">
  @media print {
    #period-form-container {display:none;}
    #ajax-datatable_length {display:none;}
    #ajax-datatable_filter {display:none;}
    #ajax-datatable_paginate {display:none;}
