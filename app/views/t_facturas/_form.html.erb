<%= form_for @t_factura do |f| %>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Datos del Cliente</h3>
          <%= render 'search_client' %>
          <br>
          <div id="client-container">
            <%= render 'cliente' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Facturación</h3>
          <%= render 'factura', f: f %>
        </div>
      </div>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3>Detalle de Factura</h3>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" onclick="$('#add-service-link').click();">
              Nuevo Servicio
            </button>
            <button type="button" class="btn btn-success" onclick="addRecargoField();">
              Nuevo Recargo
            </button>
            <button type="button" class="btn btn-danger" onclick="deleteCheckedRows();">
              Eliminar Filas Seleccionadas
            </button>
          </div>
          <br><br>
          <table class="table table-bordered">
            <thead>
              <tr style="text-align: center;">
                <th></th>
                <th>Servicio / Recargo</th>
                <th>Descripción</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Monto Total</th>
              </tr>
            </thead>
            <tbody id="factura-detalle-table">
              <%= f.fields_for :t_factura_detalles do |fd_form| %>
                <%= render 't_factura_detalle_fields', f: fd_form %>
              <% end %>
              <!-- <div class="recargos-list">
                <tr style="display: none;">
                  <td>
                    <%#= select_tag :t_recargo1, options_from_collection_for_select(@t_recargos, :id, :descripcion), include_blank: 'Seleccione Recargo', class: 'select2', style: 'width: 100%' %>
                  </td>
                  <td class="descripcion-cell"></td>
                  <td></td>
                  <td class="precio-unitario-cell"></td>
                  <td>
                    
                  </td>
                </tr>
              </div> -->
              <tr style="display: none;">
                <td>
                  <%= link_to_add_fields("Nuevo Servicio", f, :t_factura_detalles, true, style: 'display: none;', id: 'add-service-link', class: 'select2') %>
                </td>
              </tr>
              <tr id="total-row" align="center">
                <td></td>
                <td width="25%"></td>
                <td width="25%"></td>
                <td width="20%">Cantidad Total</td>
                <td></td>
                <td width="10%">Total</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <br>

  <%= render 'shared/form_buttons', f: f %>
<% end %>
<br>

<script type="text/javascript">
  $(document).ready(function(){
    $('.select2').select2();
    $('.datepicker').datepicker();
  });
</script>