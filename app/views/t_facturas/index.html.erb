<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Facturas</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Factura', new_t_factura_path, data: { turbolinks: false }, class: 'btn btn-primary float-right' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Cliente</th>
                  <th>Res / CIP</th>
                  <th>Fecha</th>
                  <th>F. Venc</th>
                  <th>Recargo</th>
                  <th>Total</th>
                  <th>Pendiente</th>
                  <th>Tp</th>
                  <th>Prosp.</th>
                  <th>Opciones</th>
                </tr>
              </thead>
              <tbody>
                <% @t_facturas.each do |t_factura| %>
                  <tr>
                    <td><%= t_factura.id %></td>
                    <td><%= t_factura.cliente || 'Sin cliente' %></td>
                    <td><%= t_factura.resolucion || 'Sin resolución' %></td>
                    <td><%= t_factura.fecha_notificacion %></td>
                    <td><%= t_factura.fecha_vencimiento %></td>
                    <td><%= t_factura.recargo %></td>
                    <td><%= t_factura.total_factura %></td>
                    <td><%= t_factura.pendiente_fact %></td>
                    <td><%= t_factura.tipo %></td>
                    <td><%= '' %></td>
                    <td>
                      <%= render 'shared/action_buttons',
                                  show_route: t_factura,
                                  edit_route: edit_t_factura_path(t_factura) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-Level Scripts -->
<%= render "shared/dataTable" %>
