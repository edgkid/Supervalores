<div class="wrapper wrapper-content animated fadeInRight">
  <% subtitle = raw("
    <h3>
      COMPARATIVA DE INGRESOS POR TARIFAS Y CLIENTES
    </h3>
  ") %>
  <%= render 'report_header', filters: false, subtitle: subtitle %>

  <div class="row">
    <div class="col-lg-12">
      <% if TFactura.count > 0 %>
        <div class="table-responsive">
          <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6">
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= comparativa_ingresos_t_recibos_path(format: :json) %>" id="ajax-datatable">
            <thead>
              <tr>
                <th>Nro. Recibo</th>
                <th>Fecha de Pago</th>
                <th>Pago Recibido</th>
                <th>Detalle de Factura</th>
                <th>Servicio</th>
                <th>Descripcion del Servicio</th>
                <th>CÉD / PAS / RUC</th>
                <th>Razón Social</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      <% else %>
        <div>
          <p>No se encontraron registros.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

