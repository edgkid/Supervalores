<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Recibos</h5>
            </div>
            <div class="col-4">
              <%#= link_to 'Añadir recibo', new_t_factura_t_recibo_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @registros != nil && @registros.count > 0 %>
            <div class="table-responsive">
              <div class="col-12">
                <p class="text-info">Puedes hacer clic en cualquier fila para ver el detalle del registro.</p>
              </div>
              <table class="table table-striped table-bordered table-hover dataTables clickable">
                <thead>
                  <tr>
                    <th>Fecha de pago</th>
                    <th>Método de Pago</th>
                    <th>Justificación</th>
                    <th>Monto Pagado</th>
                    <th>Monto por Pagar</th>
                    <th>Monto Acreditado</th>
                  </tr>
                </thead>
                <tbody>
                  <% @registros.each do |t_recibo| %>
                    <tr data-link="<%= t_factura_t_recibo_path(t_recibo.t_factura, t_recibo) %>">
                      <td><%= t_recibo.fecha_pago %></td>
                      <td><%= t_recibo.t_metodo_pago.forma_pago %></td>
                      <td><%= t_recibo.justificacion %></td>
                      <td><%= t_recibo.pago_recibido %></td>
                      <td><%= t_recibo.pago_pendiente %></td>
                      <td><%= t_recibo.monto_acreditado %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div>
              <p>No se encontraron registros.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
