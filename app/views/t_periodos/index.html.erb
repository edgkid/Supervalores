<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Periodos</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Periodo', new_t_periodo_path, data: { turbolinks: false }, class: 'btn btn-primary float-right' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @t_periodos != nil && @t_periodos.count > 0 %>
          <div class="table-responsive">
            <%= render 'shared/table', object_list: @t_periodos, object_attributes: {
                        descripcion: 'Descripción', rango_dias: 'Rango de días',
                        dia_tope: 'Día tope', mes_tope: 'Mes tope',
                        mes_tope_desc: 'Descripción del mes tope', estatus: 'Estatus' } %>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>