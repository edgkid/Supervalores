<%= fields_for registro do |form| %>
<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <%= form.label :descripcion, 'Descripción', class: "text-right" %>
  </div>
  <div class="col-sm-10 input-value">
    <% if editable %>
    <%= form.text_area :descripcion, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
    <% else %>
    <%= registro.descripcion %>
    <% end %>
  </div>
</div>
<div class="form-group row">  
  <div class="col-sm-2 col-form-label">
    <%= form.label :rango_dias, 'Rango días', class: "text-right" %>
  </div>
  <div class="col-sm-4 input-value">
    <% if editable %>
    <%= form.text_field :rango_dias, autofocus: true, autocomplete: "rango_dias", class: "form-control" %>
    <% else %>
    <%= registro.rango_dias %>
    <% end %>
  </div>
  <div class="col-sm-2 col-form-label">
    <%= form.label :dia_tope, 'Día tope', class: "text-right" %>
  </div>
  <div class="col-sm-4 input-value">
    <% if editable %>
    <%= form.number_field :dia_tope, autofocus: true, autocomplete: "dia_tope", class: "form-control" %>
    <% else %>
    <%= registro.dia_tope %>
    <% end %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <%= form.label :estatus, 'Estatus', class: "text-right" %>
  </div>
  <div class="col-sm-4 input-value">
    <% if editable %>
    <%= form.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
    <% else %>
    <%= estatus_text registro.estatus %>
    <% end %>
  </div>
  <div class="col-sm-2 col-form-label vertical-align">
    <%= form.label :mes_tope, 'Mes tope', class: "text-right" %>
  </div>
  <div class="col-sm-4 input-value">
    <% if editable %>
    <%= form.number_field :mes_tope, autofocus: true, autocomplete: "mes_tope", class: "form-control" %>
    <% else %>
    <%= registro.mes_tope %>
    <% end %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <%= form.label :mes_tope_desc, 'Descripción del mes tope', class: "text-right" %>
  </div>
  <div class="col-sm-10 input-value">
    <% if editable %>
    <%= form.text_area :mes_tope_desc, autofocus: true, autocomplete: "mes_tope_desc", class: "form-control" %>
    <% else %>
    <%= registro.mes_tope_desc %>
    <% end %>
  </div>
</div>
<% end %>