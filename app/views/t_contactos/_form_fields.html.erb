<%
%>
<%= fields_for registro do |form| %>
<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <%= form.label :nombre, 'Nombre', class: "text-right" %>
  </div>
  <div class="col-sm-4 input-value">
    <% if defined?(editable) && editable %>
    <%= form.text_field :nombre, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
    <% else %>
    <%= registro.nombre %>
    <% end %>
  </div>
