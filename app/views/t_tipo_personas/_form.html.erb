<div class="ibox-content">
  <%= form_with(model: registro, local: true) do |form| %>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= form.label :descripcion, 'DescripciÃ³n', class: "text-right" %>
    </div>
    <div class="col-sm-9 input-value">
      <% if editable %>
      <%= form.text_area :descripcion, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= form.label :estatus, 'Estatus', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= estatus_text registro.estatus %>
      <% end %>
    </div>
  </div>
  <div class="form-group row center-content">
    <div class="col-sm-4 col-offset-sm-2">
      <%= link_to 'Volver', return_to	, {:class =>"btn btn-white btn-sm col-12"} %>
    </div>
    <% if editable %>
    <div class="col-sm-4">
      <%= form.submit 'Guardar', :class => "btn btn-primary btn-sm col-12" %>
    </div>
    <% end %>
  </div>
  <% end %>
</div>