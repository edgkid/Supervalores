<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Tipos de Personas</h5>
            </div>
            <div class="col-4">
              <%= link_to 'Añadir tipo de persona', new_t_tipo_persona_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Descripción</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
                <% if @registros != nil && @registros.count > 0 %>
                <% @registros.each do |registro| %>
                <tr data-link="<%= polymorphic_url(registro) %>">
                  <td><%= registro.descripcion %></td>
                  <td><%= estatus_text registro.estatus %></td>
                </tr>
                <% end %>
                <% else %>
                <tr>
                  <td colspan="6">No se encontraron registros.</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


