<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-12">
              <h1>Tipos de Personas</h1>
              <%= link_to 'Añadir tipo de persona', new_t_tipo_persona_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover registros">
              <thead>
                <tr>
                  <th>Descripción</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% if @registros != nil && @registros.count > 0 %>
                <% @registros.each do |registro| %>
                <tr>
                  <td><%= registro.descripcion %></td>
                  <td><%= estatus_text registro.estatus %></td>
                  <td>
                      <%= render 'shared/action_buttons', show_route: [registro], edit_route: edit_polymorphic_path(registro) %>
                  </td>
                </tr>
                <% end %>
                <% else %>
                <tr>
                  <td colspan="6">No se encontraron registros.</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-Level Scripts -->
<script>
    $(document).ready(function () {
      $('.registros').DataTable({
        pageLength: 25,
        responsive: true
      });
  
    });
  </script>