<%= fields_for registro do |form| %>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :codigo, 'Código', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.text_field :codigo, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.codigo %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_estatus_id, 'Estatus', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :t_estatus_id, opciones_de_estatus(true, 2, true) , {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_estatus.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_tipo_cliente_id, 'Tipo de Cliente', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.select :t_tipo_cliente_id, opciones_de_tipos_de_clientes , {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_tipo_cliente.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_tipo_persona_id, 'Tipo de Persona', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.select :t_tipo_persona_id, opciones_de_tipos_de_personas , {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_tipo_persona.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :razon_social, 'Razón Social', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.text_field :razon_social, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.razon_social %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :email, 'Email', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.text_field :email, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.email %>
      <% end %>
    </div>    
  </div>  
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :telefono, 'Teléfono', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.text_field :telefono, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.telefono %>
      <% end %>
    </div>
    <div class="col-sm-4 col-form-label">
      <%= label_tag :es_prospecto, '¿Es Prospecto?', class: "text-right" %>
    </div>
    <div class="col-sm-2 input-value">
      <% if editable && registro.prospecto_at == nil %>
        <%= form.check_box :es_prospecto, {checked: registro.es_prospecto} %>
      <% else %>
      <%= registro.es_prospecto ? "Si": "No" %>
      <% end %>
    </div>
  </div>
<% end %>