<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-12">
              <h1>Clientes</h1>
              <%= link_to 'Añadir cliente', new_t_cliente_path, class: "btn btn-primary float-right" %>              
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover registros">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Razón social</th>
                  <th>Teléfono</th>
                  <th>Email</th>
                  <th>Tipo cliente</th>
                  <th>Tipo persona</th>
                  <th>¿Es Prospecto?</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% if @registros != nil && @registros.count > 0 %>
                <% @registros.each do |registro| %>
                <tr>
                  <td><%= registro.codigo %></td>                  
                  <td><%= registro.razon_social %></td>
                  <td><%= registro.telefono %></td>
                  <td><%= registro.email %></td>
                  <td><%= registro.t_tipo_cliente.descripcion %></td>
                  <td><%= registro.t_tipo_persona.descripcion %></td>
                  <td><%= registro.prospecto_at %></td>
                  <td><%= registro.t_estatus.descripcion %></td>
                  <td>
                      <%= render 'shared/action_buttons', show_route: [registro], edit_route: edit_polymorphic_path(registro) %>
                  </td>
                </tr>
                <% end %>
                <% else %>
                <tr>
                  <td colspan="12">No se encontraron registros.</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-Level Scripts -->
<script>
    $(document).ready(function () {
      $('.registros').DataTable({
        pageLength: 25,
        responsive: true
      });
  
    });
  </script>