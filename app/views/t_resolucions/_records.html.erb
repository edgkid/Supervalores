<% 
mostrar_cliente = true
cliente = nil
if defined?(del_cliente) && del_cliente != nil  
  mostrar_cliente = false
  cliente = del_cliente.id
end
%>
<div class="ibox-content">
  <%= render "shared/spiner_loading" %>  
  <div class="waiting-content table-responsive">
    <div class="col-12">
      <p class="text-info">Puedes hacer "click" en cualquier fila para ver el detalle del registro.</p>
    </div>
    <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= t_resolucions_path(format: :json, cliente: cliente) %>" id="ajax-datatable">
      <thead>
        <tr>
          <th>Resolución</th>
          <% if mostrar_cliente %>
          <th>Cliente</th>
          <% end %>
          <th>Descripción</th>
          <th>Fecha</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>