<div class="ibox-content">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables">
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Resolución</th>
          <th>Descripción</th>
          <th>Fecha</th>
          <th>Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% if registros != nil && registros.count > 0 %>
        <% registros.each do |registro| %>
        <tr>
          <td><%= registro.t_cliente.razon_social %></td>
          <td><%= registro.resolucion %></td>
          <td><%= registro.descripcion %></td>
          <td><%= registro.created_at %></td>
          <td>
              <%= render 'shared/action_buttons', show_route: [registro], edit_route: edit_polymorphic_path(registro) %>
          </td>
        </tr>
        <% end %>
        <% else %>
        <tr>
          <td colspan="6">No se encontraron registros.</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>