<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h1>Resoluciones</h1>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir tipo de cliente', new_t_resolucion_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables">
              <thead>
                <tr>
                  <th>Cliente</th>
                  <th>Resolución</th>
                  <th>Descripción</th>
                  <th>Fecha</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              </tr>
              </thead>

              <tbody>
                <% if @registros != nil && @registros.count > 0 %>
                <% @registros.each do |registro| %>
                <tr>
                  <td><%= registro.t_cliente.razon_social %></td>
                  <td><%= registro.resolucion %></td>
                  <td><%= registro.descripcion %></td>
                  <td><%= registro.created_at %></td>
                  <td class="acciones">
                    <%= link_to 'Ver', registro, class: "btn btn-white" %>
                    <%= link_to 'Editar', edit_polymorphic_path(registro), class: "btn btn-white" %>
                    <%= link_to 'Eliminar', registro, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-white" %>
                  </td>
                </tr>
                <% end %>
                <% else %>
                <tr>
                  <td colspan="6">No se encontraron registros.</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-Level Scripts -->
<%= render "shared/dataTable" %>
