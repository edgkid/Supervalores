<div class="ibox-content">
  <% if no_existen_clientes_disponibles %>
  <p>No se encontraron registros de clientes disponibles.</p>
  <% else %>
  <%= form_with(model: registro, local: true) do |form| %>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :resolucion, 'Resolución', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.text_field :resolucion, autofocus: true, class: "form-control" %>
      <% else %>
      <%= registro.resolucion %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_estatus_id, 'Estatus', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :t_estatus_id, opciones_de_estatus(true, 3, true) , {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_estatus.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :descripcion, 'Descripción', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.text_area :descripcion, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :t_cliente_id, 'Cliente', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :t_cliente_id, opciones_de_clientes, {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= registro.t_cliente.razon_social %>
      <% end %>
    </div>
    <% if !editable %>
    <div class="col-sm-2 col-form-label">
      <%= form.label :created_at, 'Fecha', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <%= registro.created_at %>
    </div>
    <% end %>
  </div>
  <div class="form-group row center-content">
    <div class="col-sm-4 col-offset-sm-2">
      <%= link_to 'Volver', return_to	, {:class =>"btn btn-white btn-sm col-12"} %>
    </div>
    <% if editable %>
    <div class="col-sm-4">
      <%= form.submit 'Guardar', :class => "btn btn-primary btn-sm col-12" %>
    </div>
    <% end %>
  </div>
  <% end %>
  <% end %>
</div>