<%= fields_for registro do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :forma_pago, 'Forma de Pago', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= f.text_field :forma_pago, autofocus: true, autocomplete: "forma_pago", class: "form-control" %>
      <% else %>
        <%= registro.forma_pago %>
      <% end %>
    </div>


    <div class="col-sm-2 col-form-label">
        <%= f.label :estatus, 'Estatus', class: "text-right" %>
      </div>
      <div class="col-sm-4 input-value">
        <% if editable %>
          <%= f.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
        <% else %>
          <%= estatus_text registro.estatus %>
        <% end %>
      </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :descripcion, 'Descripción', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
        <%= f.text_area :descripcion, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
        <%= registro.descripcion %>
      <% end %>
    </div>
  </div>

  <div class="form-group row justify-content-end">
    <div class="col-sm-10 input-value">
      <input type="checkbox" name="marcarTodo" id="marcarTodo">&nbsp;
      <label for="marcarTodo">Habilitar máximo y mínimo</label>
    </div>
  </div>

  <div id="maxMinEnabled"></div>
<% end %>
