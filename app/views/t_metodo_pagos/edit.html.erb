<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row justify-content-md-center">
  	<div class="col-lg-7">
    	<div class="ibox ">
      	<div class="ibox-title">
        	<h5>Edición de Método de Pago</h5>
        </div>
        <div class="ibox-content">
					<%= form_for(:t_metodo_pago, :url => {:action => 'update', :id => @t_metodo_pago.id}) do |f| %>
						<div class="row">
							<div class="col-12">
								<div class="form-group  row"><label class="col-sm-2 col-form-label">Método de Pago</label>
									<div class="col-sm-10">
										 <%= f.text_field(:forma_pago, class: "form-control") %>
									</div>
								</div>
								<div class="form-group  row"><label class="col-sm-2 col-form-label">Descripción</label>
									<div class="col-sm-10">
										<%= f.text_area(:descripcion, class: "form-control") %>
									</div>
								</div>

									<div class="form-group row">
										<input type="checkbox" name="marcarTodo" id="marcarTodo" class="col-sm-2 col-form-label"  />
										<div class="col-sm-10">
											<label >Inhabilitar máximo y mínimo</label>
										</div>
									</div>
									<div id="maxMinEnabled">
										<div class="form-group  row"><label class="col-sm-2 col-form-label">Mínimo</label>
											<div class="col-sm-10">
												<%= f.number_field :minimo, class: "form-control", step: ".01" %>
											</div>
										</div>
										<div class="form-group  row"><label class="col-sm-2 col-form-label">Máximo</label>
											<div class="col-sm-10">
												<%= f.number_field :maximo, class: "form-control", step: ".01" %>
											</div>
										</div>
		              </div>

                <div class="form-group row">
                  <label class="col-sm-2 col-form-label">Estatus</label>
                  <div class="col-sm-10">
                    <%= select_tag :id_estatus, options_from_collection_for_select(@estatus, "id", "descripcion"),  class: "form-control" %>
                  </div>
                </div>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-sm-6 col-sm-offset-2">
								<%= submit_tag("Guardar", :class => "btn btn-primary col-4 float-right") %>
							</div><br><br>
							<div class="col-sm-6 col-sm-offset-2">
								<%= link_to 'Atrás',t_metodo_pagos_index_path, {:class =>"btn btn-white  col-4"} %>
							</div>
						</div>
					<% end %>
        </div>
      </div>
    </div>
	</div>
</div>

<script type="text/javascript">
  $("#marcarTodo").change(function () {
  	    if ($(this).is(':checked')) {
  	        document.getElementById("maxMinEnabled").innerHTML = "";
  	    } else {
					var section = "  <div class='form-group row'>" +
															"<label class='col-sm-2 col-form-label'>Mínimo</label>" +
																"<div class='col-sm-10'>" +
																	'<input type="number" name="minimo" id="minimo" class= "form-control" autofocus= true autocomplete="minimo" step=".01" min="0" />' +
																"</div>" +
														"</div>" +
														"<div class='form-group row'>" +
															"<label class='col-sm-2 col-form-label'>Máximo</label>" +
															"<div class='col-sm-10'>" +
																'<input type="number" name="maximo" id="maximo" class="form-control" autofocus=true autocomplete="maximo"  step=".01" min="0" />' +
															"</div>" +
														"</div>"
  	        document.getElementById("maxMinEnabled").innerHTML = section;
  	    }
  	});
</script>
