<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Listado de Método de Pago</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Método de Pago',t_metodo_pagos_new_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Forma de Pago</th>
                  <th>Mínimo</th>
                  <th>Máximo</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
                <% @t_metodo_pagos.each do |metodo| %>
                  <tr data-link="<%= t_metodo_pagos_index_path(metodo) %>">
                    <td><%= metodo.forma_pago %></td>
                    <td><%= metodo.minimo %></td>
                    <td><%= metodo.maximo %></td>
                    <td><%= metodo.estatus %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
