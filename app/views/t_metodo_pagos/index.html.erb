<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Listado de Métodos de Pago</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Método de Pago', new_t_metodo_pago_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= t_metodo_pagos_path(format: :json) %>" id="ajax-datatable">
              <thead>
                <tr>
                  <th>Forma de Pago</th>
                  <th>Descripción</th>
                  <th>Mínimo</th>
                  <th>Máximo</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
