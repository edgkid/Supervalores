<%= form_for @t_factura do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Factura Automática</h5>
        </div>

        <div class="ibox-content">
          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
              <%= f.label :t_resolucion_id, 'Resolución', class: "text-right" %>
            </div>
            <div class="col-sm-4 input-value">
              <% if true %>
                <%= f.select :t_resolucion_id, opciones_de_resoluciones, {}, { class: "form-control" } %>
              <% else %>
                <%#= @t_factura.descripcion %>
              <% end %>
            </div>
            <div class="col-sm-2 col-form-label">
              <%= f.label :t_periodo_id, 'Periodo', class: "text-right" %>
            </div>
            <div class="col-sm-4 input-value">
              <% if true %>
                <%= f.select :t_periodo_id, opciones_de_periodos, {}, { class: "form-control" } %>
              <% else %>
                <%#= @t_factura.descripcion %>
              <% end %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-2 col-form-label">
              <%= f.label :t_recargo_ids, 'Recargos', class: "text-right" %>
            </div>
            <div class="col-sm-10 input-value">
              <% if true %>
                <%= f.select :t_recargo_ids, opciones_de_recargos, {}, { class: "form-control", multiple: true } %>
              <% else %>
                <%#= @t_factura.descripcion %>
              <% end %>
            </div>
          </div>

          <%= f.fields_for :t_factura_detalles do |fd_form| %>
            <div class="form-group row">
              <div class="col-sm-2 col-form-label">
                <%= fd_form.label :t_tarifa_servicio_id, 'Servicio', class: "text-right" %>
              </div>
              <div class="col-sm-4 input-value">
                <% if true %>
                  <%= fd_form.select :t_tarifa_servicio_id, opciones_de_resoluciones, {}, { class: "form-control", multiple: true } %>
                <% else %>
                  <%#= @t_factura.descripcion %>
                <% end %>
              </div>
              <div class="col-sm-2 col-form-label">
                <%#= f.label :t_periodo_id, 'Periodo', class: "text-right" %>
              </div>
              <div class="col-sm-4 input-value">
                <% if true %>
                  <%#= f.select :t_periodo_id, opciones_de_periodos, {}, { class: "form-control" } %>
                <% else %>
                  <%#= @t_factura.descripcion %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
