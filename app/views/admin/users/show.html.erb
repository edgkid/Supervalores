<div class="row">
	<div class="col-lg-12">
		<div class="ibox-title">
			<h5>Datos del Usuario</h5>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="ibox-title">
		    <img src="/img/user_icon.png" alt="Smiley face" height="15%" width="15%">
		</div>
		<div class="ibox-content">
			<%= form_for [:admin, @user] do |f| %>
				<div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @user.nombre,  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row"><label class="col-sm-2 col-form-label">Apellido</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'apellido', @user.apellido,  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Estado</label>
			        <div class="col-sm-10">
			        	<%= text_field_tag 'estado', @user.estado ? 'Activo' : 'Inactivo',  class:"form-control", disabled: true %>
			        </div>
			    </div>
			    <div class="hr-line-dashed"></div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Email</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'sesion', @user.email,  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Creado</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'created_at', @user.created_at != nil ?  @user.created_at.strftime("%F %H:%M") : "dd/mm/yyyy",  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Ultima Sesion</label>
			    	<div class="col-sm-10">
							<%= text_field_tag 'last_sign_in_at', @user.last_sign_in_at != nil ?  @user.last_sign_in_at.strftime("%F %H:%M") : "dd/mm/yyyy",  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
			    	<label class="col-sm-2 col-form-label">Ultima IP</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'last_sign_in_ip', @user.last_sign_in_ip != nil ? @user.last_sign_in_ip : "0.0.0.0",  class:"form-control", disabled: true %>
			    	</div>
			    </div>
			    <div class="form-group row">
				    <div class="col-sm-4 col-sm-offset-2">
				    	<%= link_to "Editar", edit_admin_user_path(@user.id), {:class=>"btn btn-white btn-sm col-12" }  %>
				    </div>
				    <div class="col-sm-4 col-sm-offset-2">
				    	<%= link_to 'Volver',admin_users_path	, {:class =>"btn btn-primary btn-sm col-12"} %>
				    </div>
			    </div>
			<% end %>
		</div>
	</div>
</div>
