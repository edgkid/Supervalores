<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Usuarios del Sistema</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Usuario',new_admin_user_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Colaborador</th>
                  <th>Usuario</th>
                  <th>Último inicio de sesión</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr data-link="<%= admin_user_path(user) %>">
                    <td><%= user.nombre %> <%= user.apellido %></td>
                    <td><%= user.email %></td>
                    <td>
                      <center><%= user.last_sign_in_at != nil ? user.last_sign_in_at.strftime("%F %H:%M") : "No ha iniciado sesión" %></center>
                    </td>
                    <td><center><%= user.estado ? 'Activo' : 'Inactivo'%></center></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


