<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Usuarios del Sistema</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Usuario',new_admin_user_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables">
              <thead>
                <tr>
                  <th>Colaborador</th>
                  <th>Usuario</th>
                  <th><center>Último Login</center></th>
                  <th><center>Estatus</center></th>
                  <th colspan="2"><center>Acciones</center></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.nombre %> &nbsp; <%= user.apellido %></td>
                    <td><%= user.email %></td>
                    <td>
                      <center><%= user.last_sign_in_at != nil ? user.last_sign_in_at.strftime("%F %H:%M") : "dd/mm/yyyy" %></center>
                    </td>
                    <td><center><%= user.estado ? 'Activo' : 'Inactivo'%></center></td>
                    <td>
                      <center>
                        <%= link_to [:admin, user], class: "btn btn-success" do %>
                          <i class="glyphicon glyphicon-search"></i>
                        <% end %>
                      </center>
                    </td>
                    <td>
                      <center>
                        <%= link_to  edit_admin_user_path(user), class: "btn btn-white" do %>
                          <i class="glyphicon glyphicon-pencil"></i>
                        <% end %>
                      </center>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Page-Level Scripts -->
<script>
  $(document).ready(function(){
    $('.dataTables').DataTable({
      pageLength: 25,
      responsive: true
    });
  });
</script>
