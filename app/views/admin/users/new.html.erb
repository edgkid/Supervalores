<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
  	<div class="col-lg-12">
    	<div class="ibox ">
      	<div class="ibox-title">
        	<h5>Nuevo Usuario</h5>
        </div>
				<div class="ibox-title">
				    <img src="/img/user_icon.png" alt="Smiley face" height="15%" width="15%">
				</div>
        <div class="ibox-content">
        	<%= form_for [:admin, @user] do |f| %>
						<%= render "/shared/errors", model: @user %>
						<div class="row"><!-- Seccion de la derecha-->
							<div class="col-sm-6">
								<div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
					    	<div class="col-sm-10">
					    		<%= f.text_field :nombre, autofocus: true, autocomplete: "nombre", class: "form-control" %>
								</div>
					    </div>
					    <div class="form-group row"><label class="col-sm-2 col-form-label">Apellido</label>
					    	<div class="col-sm-10">
					    		<%= f.text_field :apellido, autofocus: true, autocomplete: "apellido", class: "form-control" %>
					    	</div>
					    </div>
					    <div class="form-group row">
					    	<label class="col-sm-2 col-form-label">Activo</label>
					        <div class="col-sm-10">
										<%= check_box(:estado, tag.id, {checked: true}) %>
					        </div>
					    </div>

							</div>
							<div class="col-sm-6"><!-- Seccion de la izquierda-->
								<div class="form-group row">
						    	<label class="col-sm-2 col-form-label">Email</label>
						    	<div class="col-sm-10">
						    		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
						    	</div>
						    </div>
						    <div class="form-group row">
						    	<label class="col-sm-2 col-form-label">Contraseña</label>
						    	<div class="col-sm-10">
										<% if @minimum_password_length %>
											<em>(<%= @minimum_password_length %> caracteres mínimo)</em>
										<% end %>
										<%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
						    	</div>
						    </div>
						    <div class="form-group row">
						    	<label class="col-sm-2 col-form-label">Confirmar Contraseña</label>
						    	<div class="col-sm-10">
										<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
						    	</div>
						    </div>
							</div>
						</div>

            <div class="row" align="right">
              <div align="center" class="col-sm-12">
                <%= link_to 'Atrás', admin_users_path, class: 'btn btn-white col-2' %>
                <%= f.submit 'Crear Usuario', class: "btn btn-primary col-2" %>
              </div>
            </div>
					<% end %>
        </div>
      </div>
    </div>
	</div>
</div>
