<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Emisiones</h5>
            </div>
            <div class="col-4">
              <%= link_to 'A침adir emisi칩n', new_t_emision_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @registros != nil && @registros.count > 0 %>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                    <th>Fecha emisi칩n</th>
                    <th>Valor circulaci칩n</th>
                    <th>Tasa</th>
                    <th>Monto pagar</th>
                    <th>Estatus</th>                    
                    <th>Periodo</th>
                    <th>Tipo</th>
                    <th>Usuario</th>
                </tr>
              </thead>
              <tbody>
                <% @registros.each do |registro| %>
                <tr data-link="<%= polymorphic_url(registro) %>">                  
                  <td><%= registro.fecha_emision %></td>
                  <td><%= registro.valor_circulacion %></td>
                  <td><%= registro.tasa %></td>
                  <td><%= registro.monto_pagar %></td>
                  <td><%= estatus_text registro.estatus %></td>
                  <td><%= registro.t_periodo.descripcion %></td>
                  <td><%= registro.t_tipo_emision.descripcion %></td>
                  <td><%= registro.user.nombre_completo %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>