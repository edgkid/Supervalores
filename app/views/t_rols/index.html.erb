<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Roles de Usuario</h5>
            </div>
            <div class="col-4">
              <%= link_to 'Añadir Rol', new_t_rol_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @t_rols != nil && @t_rols.count > 0 %>
          <div class="table-responsive">
            <div class="col-12">
              <p class="text-info">Puedes hacer "click" en cualquier fila para ver el detalle del registro.</p>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
                <% @t_rols.each do |t_rol| %>
                <tr data-link="<%= polymorphic_url(t_rol) %>">
                  <td><%= t_rol.nombre %></td>
                  <td><%= t_rol.descripcion %></td>
                  <td><%= estatus_text t_rol.estatus %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
