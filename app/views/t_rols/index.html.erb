<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Roles del Sistema</h5>
            </div>
            <div class="col-2">
              <%= link_to("Añadir Rol", {:controller => 't_rols', :action => 'new'}, data: { turbolinks: false } , :class => "btn btn-primary col-12 float-right" ) %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th><center>Estatus</center></th>
                  <th colspan="2"><center>Acciones</center></th>
                </tr>
              </thead>

              <tbody>
                <% @rols.each do |rol| %>
                  <tr>
                    <td><%= rol.nombre %></td>
                    <td><%= rol.descripcion %></td>
                    <td><center><%= rol.estatus == 1 ? 'Activo' : 'Inactivo'%></center></td>
                    <td>
                      <center>
                        <%= link_to({:action => 'show', :id => rol.id}, data: { turbolinks: false }, class: "btn btn-success") do %>
                            <i class="glyphicon glyphicon-search"></i>
                        <% end %>
                      <center>
                    </td>
                    <td>
                      <center>
                        <%= link_to({:action => 'edit', :id => rol.id}, data: { turbolinks: false }, class: "btn btn-white") do %>
                          <i class="glyphicon glyphicon-pencil"></i>
                        <% end %>
                      <center>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Mainly scripts -->
    <script src="/js/plugins/dataTables/datatables.min.js"></script>
    <script src="/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/js/inspinia.js"></script>
    <script src="/js/plugins/pace/pace.min.js"></script>
<!-- Page-Level Scripts -->
    <script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true
            });

        });

    </script>
