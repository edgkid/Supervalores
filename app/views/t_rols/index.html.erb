<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Roles del Sistema</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Rol',rols_new_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables clickable">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
                <% @rols.each do |rol| %>
                  <%#= url= rols_index_path(rol).split('.') %>
                  <tr data-link="<%= "/rols/show/" << rols_index_path(rol).split('.')[1] %>">
                    <td><%= rol.nombre %></td>
                    <td><%= rol.descripcion %></td>
                    <td><center><%= rol.estatus == 1 ? 'Activo' : 'Inactivo'%></center></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
