<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
  	<div class="col-lg-6">
    	<div class="ibox ">
      	<div class="ibox-title">
        	<h5>Rol de Usuario</h5>
        </div>
        <div class="ibox-content">
        	<form class="">
          	<div class="row"><!-- Seccion de la derecha-->
            	<div class="col-sm-12">
								<div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
						    	<div class="col-sm-10">
										 <%= text_field_tag 'nombre', @rol.nombre,  class:"form-control", disabled: true %>
						    	</div>
					    	</div>
						    <div class="form-group  row"><label class="col-sm-2 col-form-label">Descripción</label>
						    	<div class="col-sm-10">
										<%= text_field_tag 'descripcion', @rol.descripcion,  class:"form-control", disabled: true %>
						    	</div>
						    </div>
						    <div class="form-group  row"><label class="col-sm-2 col-form-label">Peso</label>
						    	<div class="col-sm-10">
										<%= text_field_tag 'peso', @rol.peso,  class:"form-control", disabled: true %>
						    	</div>
						    </div>
						    <div class="form-group  row"><label class="col-sm-2 col-form-label">Estatus</label>
						    	<div class="col-sm-10">
										<%= text_field_tag 'estatus', @rol.estatus == 1? 'Activo' : 'Inactivo',  class:"form-control", disabled: true %>
						    	</div>
					    	</div>
              </div>
          	</div>
            <div class="form-group row">
            	<div class="col-sm-6 col-sm-offset-2">
								<%= link_to("Editar", {:action => 'edit'}, data: { turbolinks: false }, :class => "btn btn-white col-12 float-right") %>
              </div><br><br>
              <div class="col-sm-6 col-sm-offset-2">
								<%= link_to 'Atrás',rols_index_path, {:class =>"btn btn-primary btn-sm col-12"} %>
              </div>
            </div>
					</form>
        </div>
      </div>
    </div>
	</div>
</div>
