<div class="row">
	<div class="col-lg-12">
		<div class="ibox-title">
		    <h5>Datos de Rol de Usuario: &nbsp; <%= @rol.nombre %> </h5>
		</div>
		<div class="ibox-content">
			<form>
				<div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.nombre,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Descripciòn</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.descripcion,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Peso</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.peso,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Estatus</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.estatus == 1? 'Activo' : 'Inactivo',  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="hr-line-dashed"></div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Clase li</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.li_class,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Clase i</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.i_class,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Clase U</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.u_class,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group  row"><label class="col-sm-2 col-form-label">Direcciòn URL</label>
			    	<div class="col-sm-10">
			    		<%= text_field_tag 'nombre', @rol.direccion_url,  class:"form-control", disabled: true %> 
			    	</div>
			    </div>
			    <div class="form-group row">
				    <div class="col-sm-4 col-sm-offset-2">
				    	<%= link_to("Editar", {:action => 'edit'}, data: { turbolinks: false }, :class => "btn btn-white col-12") %>
				    </div>
				    <div class="col-sm-4 col-sm-offset-2">
				    	<%= link_to 'Volver',rols_index_path, {:class =>"btn btn-primary btn-sm col-12"} %>
				    </div>
			    </div>
			</form>
			
		</div>
	</div>
</div>
