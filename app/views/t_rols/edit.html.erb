<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
  	<div class="col-lg-12">
    	<div class="ibox ">
      	<div class="ibox-title">
        	<h5>Ediciòn de Rol: <small>secciòn para editar un rol de usuario</small></h5>
        </div>
        <div class="ibox-content">
        	<%= form_for(:rol, :url => {:action => 'update', :id => @rol.id}) do |f| %>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Nombre</label>
							<div class="col-sm-10">
								 <%= f.text_field(:nombre, class: "form-control") %>
							</div>
						</div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Descripciòn</label>
							<div class="col-sm-10">
								<%= f.text_field(:descripcion, class: "form-control") %>
							</div>
						</div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Peso</label>
							<div class="col-sm-10">
								<%= f.text_field(:peso, class: "form-control") %>
							</div>
						</div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Estatus</label>
							<div class="col-sm-10">
								<% opcion_a = @rol.estatus == 1 ? "Activo" : "Inactivo"%>
								<% opcion_b = opcion_a == "Activo" ? "Inactivo" : "Activo"%>
								<%= f.select(:estatus, [opcion_a, opcion_b], {}, { :class => 'form-control' }) %>
							</div>
						</div>
						<div class="hr-line-dashed"></div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Clase li</label>
							<div class="col-sm-10">
								<%= f.text_field(:li_class, class: "form-control") %>
							</div>
						</div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Clase i</label>
							<div class="col-sm-10">
								<%= f.text_field(:i_class, class: "form-control") %>
							</div>
						</div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Clase U</label>
							<div class="col-sm-10">
								<%= f.text_field(:u_class, class: "form-control") %>
							</div>
						</div>
						<div class="form-group  row"><label class="col-sm-2 col-form-label">Direcciòn URL</label>
							<div class="col-sm-10">
								<%= f.text_field(:direccion_url, class: "form-control") %>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-sm-4 col-sm-offset-2">
								<%= submit_tag("Editar", :class => "btn btn-white col-12") %>
							</div>
							<div class="col-sm-4 col-sm-offset-2">
								<%= link_to 'Volver',rols_index_path, {:class =>"btn btn-primary btn-sm col-12"} %>
							</div>
						</div>

          <% end %>
        </div>
      </div>
    </div>
	</div>
</div>
