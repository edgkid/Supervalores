<%= fields_for registro do |form| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :nombre, 'Nombre', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
        <%= form.text_field :nombre, autofocus: true, class: "form-control" %>
      <% else %>
        <%= registro.nombre %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :tasa, 'Tasa', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
        <%= form.text_field :tasa, class: "form-control" %>
      <% else %>
        <%= registro.tasa %>
      <% end %>
    </div>
  </div>
<% end %>
