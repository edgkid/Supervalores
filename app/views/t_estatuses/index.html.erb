<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Estatus</h5>
            </div>
            <div class="col-4">
              <%= link_to 'Añadir estatus', new_t_estatus_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <div class="col-12">
              <p class="text-info">Puedes hacer "click" en cualquier fila para ver el detalle del registro.</p>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= t_estatuses_path(format: :json) %>" id="ajax-datatable">
              <thead>
                <tr>
                  <th>Descripción</th>
                  <th>Disponible para</th>
                  <th>Color</th>
                  <th>Estatus</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>