<div class="ibox-content">
  <%= form_with(model: registro, local: true) do |form| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :descripcion, 'DescripciÃ³n', class: "text-right" %>
    </div>
    <div class="col-sm-10 input-value">
      <% if editable %>
      <%= form.text_area :descripcion, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>
      <%= registro.descripcion %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :estatus, 'Estatus', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= estatus_text registro.estatus %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :para, 'Para', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.select :para, opciones_para, {}, { :class => 'form-control m-b' } %>
      <% else %>
      <%= para_text registro.para %>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :color, 'Color', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
      <%= form.color_field :color, autofocus: true, autocomplete: "descripcion", class: "form-control" %>
      <% else %>          
      <span class="indicador-color" style="background-color:<%= registro.color %>;"></span>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
      <% if editable %>
      <%= render "shared/action_buttons",
        list_route: return_to, list_text: "Estatus",
        back_route: polymorphic_path(registro), back_text: "Cancelar",
        save_form: true, save_text: "Guardar",
        button_size: "xs"
      %>
      <% else %>
      <%= render "shared/action_buttons",
        list_route: return_to, list_text: "Estatus",
        edit_route: edit_polymorphic_path(registro), edit_text: "Editar",
        delete_route: polymorphic_path(registro), delete_text: "Borrar",
        button_size: "xs"
      %>
      <% end %>
  </div>
  <% end %>
</div>