<%= form_for @t_tarifa do |f| %>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="form-group">
        <%= f.label :descripcion %>
        <%= f.text_field :descripcion, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :rango_monto %>
        <%= f.number_field :rango_monto, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :recargo %>
        <%= f.number_field :recargo, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :estatus %>
        <%= f.text_field :estatus, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row" align="right">
    <div class="col-sm-12">
      <%= f.submit yield(:texto_boton), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
