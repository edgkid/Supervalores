<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5><%= yield(:texto_boton) %></h5>
        </div>
        <div class="ibox-content">
          <%= form_for @t_tarifa do |f| %>
            <fieldset <%= @is_show ? 'disabled="disabled"' : '' %>>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :nombre, class: "col-sm-3 col-form-label" %>
                    <div class="col-sm-8">
                      <%= f.text_field :nombre, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :descripcion, 'DescripciÃ³n', class: "col-sm-3 col-form-label" %>
                    <div class="col-sm-8">
                      <%= f.text_field :descripcion, class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :monto, class: "col-sm-3 col-form-label" %>
                    <div class="col-sm-8">
                      <%= f.number_field :monto, min: 0, step: 0.01, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :recargo, class: "col-sm-3 col-form-label" %>
                    <div class="col-sm-8">
                      <%= f.number_field :recargo, min: 0, step: 0.01, class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :rango_monto, 'Rango del monto', class: "col-sm-3 col-form-label" %>
                    <div class="col-sm-8">
                      <%= f.number_field :rango_monto, step: 0.01, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :estatus, class: "col-sm-3 col-form-label" %>
                    <div class="col-sm-8">
                      <%= f.select :estatus, opciones_de_estatus(false), {}, { :class => 'form-control m-b' } %>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
            <% if controller.action_name == 'edit' %>
              <%= render "shared/action_buttons",
                list_route: t_tarifas_path, list_text: "Tarifas",
                back_route: polymorphic_path(@t_tarifa), back_text: "Cancelar",
                save_form: true, save_text: "Guardar",
                button_size: "xs"
              %>
            <% elsif controller.action_name == 'new' %>
              <%= render "shared/action_buttons",
                list_route: t_tarifas_path, list_text: "Tarifas",
                save_form: true, save_text: "Guardar",
                button_size: "xs"
              %>
            <% else %>
              <%= render "shared/action_buttons",
                list_route: t_tarifas_path, list_text: "Tarifas",
                edit_route: edit_polymorphic_path(@t_tarifa), edit_text: "Editar",
                delete_route: polymorphic_path(@t_tarifa), delete_text: "Borrar",
                button_size: "xs"
              %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
