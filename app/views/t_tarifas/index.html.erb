<h1 align="center">Tarifas</h1>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Tarifas</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Tarifa', new_t_tarifa_path, data: { turbolinks: false }, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th>Rango del monto</th>
                  <th>Recargo</th>
                  <th>Estatus</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @t_tarifas.each do |t_tarifa| %>
                  <tr>
                    <td><%= t_tarifa.nombre %></td>
                    <td><%= t_tarifa.descripcion %></td>
                    <td><%= t_tarifa.rango_monto %></td>
                    <td><%= t_tarifa.recargo %></td>
                    <td><%= t_tarifa.estatus %></td>
                    <td><%= link_to 'Ver', t_tarifa, class: 'btn btn-info btn-xs' %></td>
                    <td><%= link_to 'Editar', edit_t_tarifa_path(t_tarifa), class: 'btn btn-warning btn-xs' %></td>
                    <td><%= link_to 'Eliminar', t_tarifa, method: :delete, data: { confirm: '¿Estás seguro de querer eliminar esta tarifa?' }, class: 'btn btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Mainly scripts -->
<script src="/js/plugins/dataTables/datatables.min.js"></script>
<script src="/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>

<!-- Custom and plugin javascript -->
<script src="/js/inspinia.js"></script>
<script src="/js/plugins/pace/pace.min.js"></script>

<!-- Page-Level Scripts -->
<script>
  $(document).ready(function(){
    $('.dataTables').DataTable({
      pageLength: 25,
      responsive: true
    });
  });
</script>
