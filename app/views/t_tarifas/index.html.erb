<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Tarifas</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Tarifa', new_t_tarifa_path, data: { turbolinks: false }, class: 'btn btn-primary float-right' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th>Rango del monto</th>
                  <th>Recargo</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @t_tarifas.each do |t_tarifa| %>
                  <tr>
                    <td><%= t_tarifa.nombre %></td>
                    <td><%= t_tarifa.descripcion %></td>
                    <td><%= t_tarifa.rango_monto %></td>
                    <td><%= t_tarifa.recargo %></td>
                    <td><%= t_tarifa.estatus %></td>
                    <td>
                      <%= render 'shared/action_buttons',
                                  show_route: t_tarifa,
                                  edit_route: edit_t_tarifa_path(t_tarifa) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/dataTable" %>
