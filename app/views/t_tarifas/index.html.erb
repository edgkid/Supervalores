<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Tarifas</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Tarifa', new_t_tarifa_path, data: { turbolinks: false }, class: 'btn btn-primary float-right' %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if @t_tarifas != nil && @t_tarifas.count > 0 %>
          <div class="table-responsive">
            <%= render 'shared/table', object_list: @t_tarifas, object_attributes: {
                        nombre: 'Nombre', descripcion: 'Descripción', monto: 'Monto', recargo: 'Recargo', rango_monto: 'Rango del monto', estatus: 'Estatus' } %>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


