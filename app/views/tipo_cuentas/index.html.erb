<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-10">
              <h5>Tipos de Cuentas</h5>
            </div>
            <div class="col-2">
              <%= link_to 'Añadir Cuenta',tipo_cuentas_new_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables">
              <thead>
                <tr>
                  <th>Descripción de Cuenta</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @cuentas.each do |cuenta| %>
                  <tr data-link="<%#= polymorphic_url(rol) %>">
                    <td><%= cuenta.descripcion %></td>
                    <td><center><%= cuenta.estatus == 1 ? 'Activo' : 'Inactivo'%></center></td>
                    <td>
                      <center>
                      <div class="btn-group">
                        <%= link_to({:action => 'edit', :id => cuenta.id}, data: { turbolinks: false }, class: "btn btn-warning btn-xs", title: "Editar Tipo de Cuenta") do %>
                          <i class="glyphicon glyphicon-pencil"></i>
                        <% end %>
                      </div>
                      </center>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
