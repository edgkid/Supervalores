<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
  	<div class="col-lg-6">
    	<div class="ibox ">
      	<div class="ibox-title">
        	<h5>Edición de Usuario</h5>
        </div>
				<div class="ibox-title">
				</div>
        <div class="ibox-content">
				<%= form_for(:cuenta, :url => {:action => 'update', :id => @cuenta.id}) do |f| %>
					<div class="row"><!-- Seccion de la derecha-->
						<div class="col-sm-12">
							<div class="form-group  row"><label class="col-sm-2 col-form-label">Descripción</label>
						    	<div class="col-sm-10">
						    		<%= f.text_field :descripcion, autofocus: true, autocomplete: "nombre", class: "form-control" %>
						    	</div>
						   </div>
						    <div class="form-group row">
						    	<label class="col-sm-2 col-form-label">Activo</label>
						        <div class="col-sm-10">
											<%= select_tag :is_active, options_for_select([ "Seleccione un estatus", "Activo", "Inactivo" ], ["0","1", "2"]), class: "form-control" %>
						        </div>
						    </div>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-sm-6 col-sm-offset-2">
							<%= f.submit 'Guardar Cambios', :class => "btn btn-primary btn-sm col-12" %>
						</div><br><br>
						<div class="col-sm-6 col-sm-offset-2">
							<%= link_to 'Atrás',admin_users_path	, {:class =>"btn btn-white btn-sm col-12"} %>
						</div>
					</div>
					<% end %>

      </div>
    </div>
	</div>
</div>
