<% if model.errors.any? %>
<script>
  $(document).ready(function(){
    toastr.options = {
        closeButton: true,
        escapeHtml: true,
        showMethod: 'slideDown',
        timeOut: 0,
        extendedTimeOut: 0 
    };
    errors = [<% model.errors.full_messages.each do |message| %>
    "<%= message %>",
    <% end %>
    ]
    title = 'Upss, <%= "#{model.errors.count} #{model.errors.count == 1 ? "error": "errores"}" %>'
    error = ""
    errors.forEach(function(message) {
      error += message.substring(message.indexOf("|")+1) + "<br/>"
    });
    toastr.error(error, title).css({
      "width": "auto",
      "max-width": "initial"
    })
      
  });
</script>
<% end %>