<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">CxC</h1>
    </div>
    <h3>Bienvenido a CxC</h3>
    <p>Inicie sesión para acceder</p>
    <%= form_for(resource, as: resource_name, :class => "m-t" ,url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, :class => "form-control" ,placeholder: 'email',autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, :class => "form-control",placeholder: '******',autocomplete: "current-password" %>
    </div>

    <div class="form-group">
      <%= f.submit "Iniciar Sesión", :class => "btn btn-primary block full-width m-b" %>
    </div>
    <% end %>
  </div>
</div>