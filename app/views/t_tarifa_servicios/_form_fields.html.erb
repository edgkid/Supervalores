<%= fields_for registro do |form| %>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :codigo, 'Código', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= form.text_field :codigo, autofocus: true, class: "form-control" %>
      <% else %>
        <%= registro.codigo %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :descripcion, 'Descripción', class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= form.text_area :descripcion, class: "form-control" %>
      <% else %>
        <%= registro.descripcion %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :nombre, class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= form.text_field :nombre, class: "form-control" %>
      <% else %>
        <%= registro.nombre %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :clase, class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= form.text_field :clase, class: "form-control" %>
      <% else %>
        <%= registro.clase %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :precio, class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= form.text_field :precio, class: "form-control" %>
      <% else %>
        <%= registro.precio %>
      <% end %>
    </div>
    <div class="col-sm-2 col-form-label">
      <%= form.label :estatus, class: "text-right" %>
    </div>
    <div class="col-sm-4 input-value">
      <% if editable %>
        <%= form.select :estatus, opciones_de_estatus(false), {}, { class: 'form-control m-b' } %>
      <% else %>
        <%= registro.estatus %>
      <% end %>
    </div>
  </div>
<% end %>
