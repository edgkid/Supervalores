<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5><%= yield(:texto_boton) %></h5>
        </div>
        <div class="ibox-content">
          <%= form_for @t_tarifa_servicio do |f| %>
            <fieldset <%= @is_show ? 'disabled="disabled"' : '' %>>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :codigo, 'Código', class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-9">
                      <%= f.text_field :codigo, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :descripcion, 'Descripción', class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-9">
                      <%= f.text_field :descripcion, class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :nombre, class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-9">
                      <%= f.text_field :nombre, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :clase, class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-9">
                      <%= f.text_field :clase, class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :precio, class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-9">
                      <%= f.number_field :precio, step: 0.01, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group row justify-content-md-center">
                    <%= f.label :estatus, class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-9">
                      <%#= f.number_field :estatus, class: "form-control" %>
                      <%= f.select :estatus, opciones_de_estatus(false), {}, { class: 'form-control m-b' } %>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
            <%#= render 'shared/form_buttons', f: f, object: @t_tarifa_servicio %>
            <% if controller.action_name != 'edit' %>
              <%= render "shared/action_buttons",
                list_route: t_tarifa_servicios_path, list_text: "Servicios",
                edit_route: edit_polymorphic_path(@t_tarifa_servicio), edit_text: "Editar",
                delete_route: polymorphic_path(@t_tarifa_servicio), delete_text: "Borrar",
                button_size: "xs"
              %>
            <% else %>
              <%= render "shared/action_buttons",
                list_route: t_tarifa_servicios_path, list_text: "Servicios",
                back_route: polymorphic_path(@t_tarifa_servicio), back_text: "Cancelar",
                save_form: true, save_text: "Guardar",
                button_size: "xs"
              %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
