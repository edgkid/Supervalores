<div class="wrapper wrapper-content animated fadeInRight">
  <% subtitle = raw("
    <h3>
      INFORME DE TRÁMITES DE TARIFA REGISTRADA
    </h3>
  ") %>
  <%= render 'report_header', filters: true, subtitle: subtitle %>

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <div class="row">
            <div class="col-8">
              <h5>Trámites de tarifa registrada</h5>
            </div>
            <div class="col-4">
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <% if InformeTramitesTarifasRegistradasView.count > 0 %>
          <div class="table-responsive">
            <div class="col-12">
              <p class="text-info">Puedes hacer "click" en cualquier fila para ver el detalle del registro.</p>
            </div>
            <table class="table table-striped table-bordered table-hover dataTables clickable" data-source="<%= informe_tramites_tarifas_registradas_t_tarifa_servicios_path(format: :json) %>" id="ajax-datatable">
              <thead>
                <tr>
                  <th>Codigo Nombre</th>
                  <th>Total Cantidad</th>
                  <th>Total Monto</th>
                  <th>Anio</th>
                  <th>Anio Cantidad</th>
                  <th>Anio Monto</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
          <% else %>
          <div>
            <p>No se encontraron registros.</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      autoclose: true,
      format: "dd/mm/yyyy"
    });

    $('#periodo-select').select2({ placeholder: 'Periodo' });

    $('#periodo-select').on('change', function () {
      switch ($(this).val()) {
        case 'sin_filtro':
          $("#period-selects-container").html("<%= escape_javascript(render('period_selects', periodo: 'sin_filtro')) %>");
          break;
        case 'rango':
          $("#period-selects-container").html("<%= escape_javascript(render('period_selects', periodo: 'rango')) %>");
          break;
        case 'anual':
          $("#period-selects-container").html("<%= escape_javascript(render('period_selects', periodo: 'anual')) %>");
          break;
      }
      $('#year').datepicker({
        minViewMode: 2,
        format: "dd/mm/yyyy",
        autoclose: true
      });
      $('.year').datepicker({
        minViewMode: 2,
        format: "dd/mm/yyyy",
        autoclose: true
      });
    });

    $.extend({
      useDataInAjaxCall: function (d) {        
        d.ztart = $('#start').val() == null ? null : new Date($('#start').val()).getUTCFullYear();
        d.end = $('#end').val() == null ? null : new Date($('#end').val()).getUTCFullYear();
        d.year = $('#year').val() == null ? null : new Date($('#year').val()).getUTCFullYear();        
      },
      useDataTableFooter: function (footer) {
        $.ajax({
          url: "<%= total_meses_t_tipo_clientes_path %>",
          data: {
            ztart: new $('#start').val() == null ? null : Date($('#start').val()).getUTCFullYear(),
            end: new $('#end').val() == null ? null : Date($('#end').val()).getUTCFullYear(),
            year: new $('#year').val() == null ? null : Date($('#year').val()).getUTCFullYear()
          }
        })
        .done(function (data) {
          if (data.procesado) {
            footer.empty().append($("<tr />")
              .append($("<td />").html("<b>Gran Total</b>"))
              .append($("<td />"))
              .append($("<td />").html(""))
              .append($("<td />").html(""))
              .append($("<td />").html(""))
              .append($("<td />").html(""))
            )
          }
        });
      }
    });

    function refreshTable () {
      $("#ajax-datatable").DataTable().ajax.reload();
    }

    $('.datepicker').on('changeDate', function (e) {
      refreshTable();
    });

    $('#execute').click(function () {
      refreshTable();
    });
  });
</script>

<style type="text/css" media="print">
  @media print {
    #period-form-container {display:none;}
    #ajax-datatable_length {display:none;}
    #ajax-datatable_filter {display:none;}
    #ajax-datatable_paginate {display:none;}
  }
</style>
